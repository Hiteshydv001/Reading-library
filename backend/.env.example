# Copy this to .env and fill in real values before running or deploying
# Do NOT commit .env with real secrets

# MongoDB
MONGODB_URL=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/?appName=Cluster0
DB_NAME=elibrary

# Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Auth
SECRET_KEY=generate_a_secure_random_string_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin (optional)
# If not set, the app will not auto-create an admin user on startup.
ADMIN_USERNAME=your-admin@example.com
ADMIN_PASSWORD=replace-with-strong-password
